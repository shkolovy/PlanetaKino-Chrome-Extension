{
  "manifest_version": 2,

  "name": "PlanetaKino - TicketsFirst",
  "description": "The extension monitors the start of ticket sales on planeta-kino.com.ua",
  "version": "1.0",

  "short_name": "PlanetaKinoTicketsFirst",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },

  "background": {
    "scripts": ["jquery.js", "cookie.js", "base.js", "background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "notifications",
    "http://planeta-kino.com.ua/"
  ],

  "author": "Artem Shkolovy"
}
